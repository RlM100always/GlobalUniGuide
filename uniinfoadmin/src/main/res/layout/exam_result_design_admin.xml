<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="2dp"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/cardMakerColor"
    android:layout_width="match_parent"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exam_result_serial_no_id"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_background"
            android:textSize="17dp"
            android:text="17"
            android:textStyle="bold"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/exam_result_title_id"
            android:layout_marginLeft="7dp"
            android:fontFamily="serif"
            android:textColor="@color/whiteTextColor1"
            android:textSize="16dp"
            android:text="What is HTML ? ddddddddd ddddddd ddddddddddddddddddddddddddddd d"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:id="@+id/l1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/searchbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="a : "
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:fontFamily="serif"
            android:id="@+id/t1"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:textSize="14dp"
            android:text="nnnnnggg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:id="@+id/l2"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/searchbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="b : "
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:fontFamily="serif"
            android:id="@+id/t2"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:textSize="14dp"
            android:text="nnnnnggg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:id="@+id/l3"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/searchbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="c : "
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:fontFamily="serif"
            android:id="@+id/t3"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:textSize="14dp"
            android:text="nnnnnggg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:id="@+id/l4"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/searchbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="d : "
            android:layout_width="25dp"
            android:layout_height="25dp"/>
