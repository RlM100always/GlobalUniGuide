    <TextView
        android:id="@+id/exam_result_explanation_id"
        android:layout_marginLeft="11dp"
        android:fontFamily="serif"
        android:textColor="@color/deepGreen"
        android:textSize="14dp"
        android:text="What is HTML ? ddddddddd ddddddd ddddddddddddddddddddddddddddd d"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2.5"
        android:gravity="center"
        android:layout_margin="8dp"
        android:id="@+id/question_update_id"
        android:textColor="@color/white"
        android:backgroundTint="#57C905"
        android:background="@drawable/sub_back"
        android:textSize="16dp"
        android:foreground="@drawable/rip"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Update"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"/>



</LinearLayout>