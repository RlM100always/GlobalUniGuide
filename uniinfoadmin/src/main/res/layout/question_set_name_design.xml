<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:backgroundTint="#D500F9"
        android:id="@+id/questino_set_title_name_id"
        android:background="@drawable/back"
        android:layout_margin="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="Question Set q"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/question_set_update_id"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:backgroundTint="#479902"
        android:background="@drawable/back"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/question_set_delete_id"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:backgroundTint="#FF0318"
        android:background="@drawable/back"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</LinearLayout>