<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/category_design_image_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_buet"
                    android:contentDescription="Thumbnail"/>
            </androidx.cardview.widget.CardView>

            <!-- Info Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category_unique_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#D32F2F"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/category_design_label_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/category_design_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Update Button -->
    <TextView
        android:id="@+id/category_design_update_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Update"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_background"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:elevation="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="4dp" />
</LinearLayout>
