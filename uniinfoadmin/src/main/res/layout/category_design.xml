<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    android:foreground="@drawable/uni_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="10dp"
                android:layout_width="95dp"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/category_design_image_id"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_buet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/category_unique_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing"
                    android:textStyle="bold"
                    android:textColor="#F60515"
                    android:textSize="21dp"/>

                <TextView
                    android:id="@+id/category_design_label_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="#96F10E"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/category_design_title_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2.5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:id="@+id/category_design_update_id"
            android:textColor="@color/white"
            android:backgroundTint="#57C905"
            android:background="@drawable/sub_back"
            android:textSize="16dp"
            android:foreground="@drawable/rip"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Update"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>