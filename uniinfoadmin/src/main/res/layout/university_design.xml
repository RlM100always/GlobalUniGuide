<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/back"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:elevation="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/uni_background"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/uni_design_image_id"
            android:background="@drawable/edit_text_background"
            android:scaleType="fitXY"
            android:src="@drawable/image_buet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <TextView

        android:layout_marginLeft="6dp"
        android:maxLines="2"
        android:id="@+id/uni_design_uniname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh "
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:maxLines="1"
        android:id="@+id/tnDateId"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="Click for More.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2.5"
        android:gravity="center"
        android:layout_margin="4dp"
        android:id="@+id/uni_update_id"
        android:textColor="@color/white"
        android:backgroundTint="#57C905"
        android:background="@drawable/sub_back"
        android:textSize="16dp"
        android:foreground="@drawable/rip"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Update"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2.5"
        android:gravity="center"
        android:layout_margin="4dp"
        android:id="@+id/uni_delete_id"
        android:textColor="@color/white"
        android:backgroundTint="#D50000"
        android:background="@drawable/sub_back"
        android:textSize="16dp"
        android:foreground="@drawable/rip"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Delete"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>




</LinearLayout>