<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Enter ads Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/enter_ads_title"
        android:textColorHint="#676565"
        android:textColor="@color/black"
        android:paddingLeft="11dp"
        android:hint="Enter ads title"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back"
        android:maxLines="100000"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Enter ads Image Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/enter_ads_image_link"
        android:textColorHint="#676565"
        android:textColor="@color/black"
        android:paddingLeft="11dp"
        android:hint="Enter ads iamge link"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back"
        android:maxLines="100000"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/enter_ads_key_link"
        android:textColorHint="#676565"
        android:textColor="@color/black"
        android:paddingLeft="11dp"
        android:hint="Enter site link "
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back"
        android:maxLines="100000"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <EditText
        android:id="@+id/enter_key_number"
        android:textColorHint="#676565"
        android:textColor="@color/black"
        android:paddingLeft="11dp"
        android:hint="Enter key number"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back"
        android:maxLines="100000"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>


    <TextView
        android:id="@+id/ads_submit_id"
        android:backgroundTint="#0314FF"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/back"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>