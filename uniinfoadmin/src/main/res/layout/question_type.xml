<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Add MCQ Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_question_set_title"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Enter question name"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="120dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <EditText
            android:id="@+id/ed_option_a"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Option a"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <EditText
            android:id="@+id/ed_option_b"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Option b"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <EditText
            android:id="@+id/ed_option_c"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Option c"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <EditText
            android:id="@+id/ed_option_d"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Option d"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <EditText
            android:id="@+id/ed_explanation_id"
            android:textColorHint="#676565"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:hint="Explanation"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:maxLines="1000"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Choose right answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup

                android:id="@+id/group_radio_mcq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_a_id"
                    android:text="Option a"
                    android:textSize="15sp"/>
                <RadioButton
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_b_id"
                    android:text="Option b"
                    android:textSize="15sp"/>
                <RadioButton
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_c_id"
                    android:text="Option c"
                    android:textSize="15dp"/>
                <RadioButton
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_d_id"
                    android:text="Option d"
                    android:textSize="15dp"/>
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2.5"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:id="@+id/question_submit_id"
            android:textColor="@color/white"
            android:backgroundTint="#57C905"
            android:background="@drawable/sub_back"
            android:textSize="20dp"
            android:foreground="@drawable/rip"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Submit"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>







</ScrollView>