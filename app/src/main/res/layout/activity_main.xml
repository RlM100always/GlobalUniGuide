<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_id"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:openDrawer="start"
    tools:context="com.techtravelcoder.alluniversityinformations.countryDetails.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_gravity="left"
            app:titleMarginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tolbar"
            app:title="GlobalUniGuide"
            app:subtitleTextColor="@color/white"
            app:subtitle="Explore More and Gather Knowledge"
            app:titleTextColor="@color/white"
            />

        <androidx.appcompat.widget.SearchView
            android:elevation="10dp"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="15dp"
            android:background="@drawable/searchbar_background"
            app:queryHint="Search here..."
            app:iconifiedByDefault="false"
            />
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.startapp.sdk.ads.banner.Banner
            android:id="@+id/banner_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom" />

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/back"
        app:itemIconSize="28dp"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:itemIconPadding="8dp"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:visibility="visible">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
