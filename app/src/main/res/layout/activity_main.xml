                            android:background="@drawable/image_buet"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            app:iss_auto_cycle="true"
                            app:iss_period="2000"
                            app:iss_delay="2000"
                            app:iss_text_align="CENTER"/>

                    </androidx.cardview.widget.CardView>


