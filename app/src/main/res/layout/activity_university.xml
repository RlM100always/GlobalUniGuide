<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/university_suffle_id"
    android:background="@color/back"
    tools:context="com.techtravelcoder.alluniversityinformations.universityDetails.UniversityActivity">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Progress bar in the middle -->
            <!-- Content of the layout -->
            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">


                <!-- Your other views here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableTint="@color/whiteTextColor1"
                            android:visibility="gone"
                            android:id="@+id/back_pressed_id"
                            android:foreground="@drawable/uni_background"
                            android:drawablePadding="35dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/baseline_arrow_back_24"
                            android:fontFamily="serif"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="21dp"
                            android:textColor="@color/whiteTextColor1"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginRight="8dp"
                            android:gravity="left"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:id="@+id/uni_coununtry_name_id"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="University Guidelines"
                            android:textStyle="bold"
                            android:textColor="@color/whiteTextColor1"
                            android:textSize="21dp"/>


                    </LinearLayout>



                    <androidx.appcompat.widget.SearchView

                        app:iconifiedByDefault="false"

                        android:layout_marginBottom="10dp"
                        android:id="@+id/searchView_uni"
                        android:layout_width="280dp"
                        android:layout_height="42dp"
                        android:background="@drawable/searchbar_background"
                        app:queryHint="Search university"
                        />
                    <androidx.core.widget.NestedScrollView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/l1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:padding="3dp"
                                    android:layout_weight="0.1"
                                    android:layout_marginStart="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrow"
                                    app:civ_border_color="@color/cardMakerColor"
                                    app:civ_border_width=".8dp" />

                                <TextView
                                    android:id="@+id/best_uni_id"
                                    android:fontFamily="serif"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:layout_marginStart="5dp"
                                    android:text=""
                                    android:textColor="@color/heading"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/arrow_right"
                                    android:scaleType="fitXY" />

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="15dp"
                                android:id="@+id/top_recyclerview_id"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/l2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:padding="3dp"
                                    android:layout_weight="0.1"
                                    android:layout_marginStart="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrow"
                                    app:civ_border_color="@color/cardMakerColor"
                                    app:civ_border_width=".8dp" />

                                <TextView
                                    android:id="@+id/public_uni_id"
                                    android:fontFamily="serif"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:layout_marginStart="5dp"
                                    android:text=""
                                    android:textColor="@color/heading"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/arrow_right"
                                    android:scaleType="fitXY" />

                            </LinearLayout>

                            <ProgressBar
                                android:visibility="visible"
                                android:id="@+id/progressBar_uni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:fontFamily="serif"
                                android:id="@+id/loading_id"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading University !!!!"
                                android:textStyle="bold"
                                android:textColor="@color/whiteTextColor1"
                                android:textSize="22dp"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="5dp"
                                android:id="@+id/public_recyclerview_id"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:id="@+id/ll_private_id"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:padding="3dp"
                                    android:layout_weight="0.1"
                                    android:layout_marginStart="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrow"
                                    app:civ_border_color="@color/cardMakerColor"
                                    app:civ_border_width=".8dp" />

                                <TextView
                                    android:id="@+id/private_uni_id"
                                    android:fontFamily="serif"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:layout_marginStart="5dp"
                                    android:text=""
                                    android:textColor="@color/heading"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/arrow_right"
                                    android:scaleType="fitXY" />

                            </LinearLayout>



                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="5dp"
                                android:id="@+id/private_recyclerview_id"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/l3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:padding="3dp"
                                    android:layout_weight="0.1"
                                    android:layout_marginStart="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrow"
                                    app:civ_border_color="@color/cardMakerColor"
                                    app:civ_border_width=".8dp" />

                                <TextView
                                    android:id="@+id/all_uni_id"
                                    android:fontFamily="serif"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:layout_marginStart="5dp"
                                    android:text=""
                                    android:textColor="@color/heading"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0.1"
                                    android:scaleType="fitXY" />

                            </LinearLayout>



                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:id="@+id/recycler_view_university_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/l4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:padding="3dp"
                                    android:layout_weight="0.1"
                                    android:layout_marginStart="2dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrow"
                                    app:civ_border_color="@color/cardMakerColor"
                                    app:civ_border_width=".8dp" />

                                <TextView
                                    android:id="@+id/more_id"
                                    android:fontFamily="serif"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:layout_marginStart="5dp"
                                    android:text="More University , You May Like"
                                    android:textColor="@color/heading"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0.1"
                                    android:scaleType="fitXY" />

                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/more_suggested_university"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
