<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="4dp"
    android:backgroundTint="@color/cardMakerColor"
    android:gravity="center"
    android:elevation="2dp"
    android:foreground="@drawable/uni_background"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:foreground="@drawable/uni_background"
        android:layout_gravity="center"
        android:id="@+id/public_unidesign_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/loading"
        app:civ_border_color="#858684"
        app:civ_border_width="1.2dp"
        />
    <TextView
        android:drawablePadding="3dp"
        android:layout_marginLeft="5dp"
        android:drawableTint="@color/deepGreen"
        android:gravity="center"
        android:drawableRight="@drawable/baseline_star_rate_34"
        android:fontFamily="serif"
        android:id="@+id/public_uni_design_rating_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 4.5"
        android:textColor="@color/deepGreen"
        android:textSize="12dp"
        android:textStyle="bold" />


    <TextView
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="serif"
        android:maxLines="3"
        android:id="@+id/public_unidesign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh "
        android:textColor="@color/whiteTextColor1"
        android:textSize="13dp"
        android:textStyle="bold" />


</LinearLayout>