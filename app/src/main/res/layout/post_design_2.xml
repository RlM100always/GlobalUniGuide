<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:background="@drawable/loading"
                    android:id="@+id/post_design_image_id"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_design_category"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="#06F8B7"
                    android:textSize="19dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:id="@+id/post_design_title"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/yellow"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/post_design_views"
                    android:maxLines="2"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10444444 Views"
                    android:textColor="#C6FFFFFF"
                    android:textSize="14dp"/>



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>