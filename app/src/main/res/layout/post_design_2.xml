<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:backgroundTint="@color/cardMakerColor"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:src="@drawable/loading"
                    android:background="@drawable/background"                    android:id="@+id/post_design_image_id"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="2dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:backgroundTint="#57AE0E"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="serif"
                    android:maxLines="1"
                    android:id="@+id/post_lesson_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Lesson"
                    android:textColor="@color/back"
                    android:textSize="11dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/post_design_category"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="@color/whiteTextSideColor1"
                    android:textSize="16dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:id="@+id/post_design_title"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/whiteTextColor1"
                    android:textSize="14.5dp"/>



            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableTint="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:drawableTop="@drawable/baseline_pageview_24"
                android:layout_weight="1"
                android:id="@+id/post_design_views"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10444444 Views"
                android:textColor="@color/whiteTextSideColor1"
                android:textSize="11dp"/>

            <TextView
                android:drawableTint="@color/whiteTextSideColor1"

                android:id="@+id/post_design_loves"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_favorite_241"
                android:gravity="center"
                android:layout_weight="1"
                android:text="3454466 loves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableTint="@color/whiteTextSideColor1"

                android:id="@+id/post_design_reviews_num"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_reviews_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="123664 reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableTint="@color/whiteTextSideColor1"
                android:id="@+id/post_design_star"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_stars_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="4.6 stars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>