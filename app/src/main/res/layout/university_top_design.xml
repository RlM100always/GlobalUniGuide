<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/back"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:elevation="20dp"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/uni_background"
        app:cardCornerRadius="10dp"
        android:layout_width="180dp"
        android:layout_height="130dp">
        <ImageView
            android:foreground="@drawable/uni_background"
            android:id="@+id/uni_design_image_id1"
            android:background="@drawable/loading"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_gravity="center_horizontal"
        android:drawablePadding="3dp"
        android:layout_marginLeft="5dp"
        android:drawableTint="@color/green"
        android:gravity="center"
        android:drawableRight="@drawable/baseline_star_rate_34"
        android:fontFamily="serif"

        android:id="@+id/top_design_rating_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" 4.5"
        android:textColor="@color/green"
        android:textSize="12dp"
        android:textStyle="bold" />


    <TextView
        android:fontFamily="serif"
        android:layout_marginLeft="6dp"
        android:maxLines="2"
        android:id="@+id/uni_design_uniname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh "
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:fontFamily="serif"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:maxLines="1"
        android:id="@+id/tnDateId"
        android:textColor="@color/yellow"
        android:textSize="13dp"
        android:text="Click Here to know more.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>