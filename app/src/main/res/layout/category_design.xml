<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
     android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:foreground="@drawable/uni_background"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="10dp"
                android:layout_width="95dp"
                android:layout_height="90dp">
                <ImageView
                    android:background="@drawable/loading"
                    android:id="@+id/category_design_image_id"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="2"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/baseline_category_24"
                    android:id="@+id/category_design_label_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="17dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/baseline_title_24"
                    android:id="@+id/category_design_title_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/white"
                    android:textSize="15.5dp"/>


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>



    </LinearLayout>


</LinearLayout>