<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/cardMakerColor"
    android:background="@drawable/edit_text_background"
    android:layout_margin="10dp"
    android:elevation="2dp"
     android:layout_height="wrap_content">
    <LinearLayout

        android:foreground="@drawable/uni_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="9dp"
                android:foreground="@drawable/uni_background"
                android:layout_width="70dp"
            android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/loading"
                    android:background="@drawable/background"                    android:id="@+id/category_design_image_id"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="2"
                    android:drawablePadding="4dp"
                    android:id="@+id/category_design_label_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="@color/whiteTextSideColor1"
                    android:textSize="16dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:drawablePadding="4dp"
                    android:id="@+id/category_design_title_id"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/whiteTextColor1"
                    android:textSize="13.5dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:backgroundTint="#57AE0E"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="serif"
                    android:maxLines="1"
                    android:id="@+id/category_design_course_no_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Lesson"
                    android:textColor="@color/back"
                    android:textSize="11dp"
                    android:textStyle="bold" />



            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>