<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context="com.techtravelcoder.alluniversityinformations.postDetails.CategoryPostActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/back"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.SearchView
                android:layout_margin="6dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:id="@+id/category_post_searchView"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/searchbar_background"
                app:queryHint="Search post..."
                app:iconifiedByDefault="false"
                />

            <TextView
                android:id="@+id/category_set_id"
                android:textColor="#1ADEF6"
                android:gravity="center"
                android:text="Programming"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <View
                android:layout_marginTop="4dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="1.2dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:text="Total Playlist Views :"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/playlist_views_id"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FDD835"
                    android:gravity="left"
                    android:text="500"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:text="Total Playlist Content :"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/playlist_total_content_id"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FDD835"
                    android:gravity="left"
                    android:text="500"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:text="Playlist Ratting :"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/playlist_rating_id"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FDD835"
                    android:gravity="left"
                    android:text="4.5"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/back"
                android:id="@+id/category_post_recyclerview_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>
        <ProgressBar
            android:id="@+id/category_post_progressbar_id"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>
</LinearLayout>