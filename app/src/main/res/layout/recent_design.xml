<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:foreground="@drawable/uni_background"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="2"
                    android:id="@+id/recent_design_category"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="17dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:maxLines="5"
                    android:id="@+id/recent_design_title"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/white"
                    android:textSize="15.5dp"/>
                <TextView
                    android:id="@+id/recent_design_date"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published On : 12 January , 2024"
                    android:textColor="@color/lighGreen"
                    android:textSize="13.5dp"/>




            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="12dp"
                android:padding="4dp"
                android:layout_width="140dp"
                android:layout_height="100dp">
                <ImageView

                    android:background="@drawable/loading"
                    android:id="@+id/recent_design_image_id"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_buet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableTint="@color/green"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:drawableTop="@drawable/baseline_pageview_24"
                android:layout_weight="1"
                android:id="@+id/recent_design_views"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10444444 Views"
                android:textColor="@color/white"
                android:textSize="12dp"/>

            <TextView
                android:drawableTint="@color/red"

                android:id="@+id/recent_design_loves"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/baseline_favorite_241"
                android:gravity="center"
                android:layout_weight="1"
                android:text="3454466 loves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableTint="@color/yellow"

                android:id="@+id/recent_design_reviews_num"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/baseline_reviews_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="123664 reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableTint="#00BFA5"

                android:id="@+id/recent_design_star"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/baseline_stars_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="4.6 stars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>