<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:foreground="@drawable/uni_background"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="2"
                    android:id="@+id/recent_design_category"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="19dp"/>

                <TextView
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:maxLines="5"
                    android:id="@+id/recent_design_title"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/recent_design_views"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10444444 Views"
                    android:textColor="#C6FFFFFF"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/recent_design_date"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published On : 12 January , 2024"
                    android:textColor="#C6FFFFFF"
                    android:textSize="14dp"/>




            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="8dp"
                android:padding="4dp"
                android:layout_width="110dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/recent_design_image_id"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_buet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>