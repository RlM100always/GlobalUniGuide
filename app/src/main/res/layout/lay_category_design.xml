<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="@drawable/uni_background"

    android:background="@drawable/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Image with Modern Touch -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lay_category_iamge_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/accent_color"/>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:gravity="start">

            <!-- Title with Icon -->
            <com.google.android.material.chip.Chip
                android:id="@+id/lay_category_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh"
                app:chipIcon="@drawable/pdf"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:textStyle="bold"/>

            <!-- Book Count with Modern Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/lay_category_total_book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="50 Books"
                app:chipBackgroundColor="@color/secondary_color"
                style="@style/Widget.MaterialComponents.Chip.Choice"/>

            <!-- Status with Modern Indicator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="Status: Available"
                android:textColor="@color/success_color"></TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>