<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:backgroundTint="@color/cardMakerColor"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
           >

            <ImageView
                android:id="@+id/category_design_image_id"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/loading" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/category_design_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Programming"
        android:textColor="@color/whiteTextSideColor1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_design_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:text="Java Development Roadmap"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_design_course_no_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#57AE0E"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="50 Lessons"
        android:textColor="@color/back"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>