<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/back"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:foreground="@drawable/uni_background"
            app:cardCornerRadius="10dp"
            android:layout_width="140dp"
            android:layout_height="140dp">
            <ImageView
                android:background="@drawable/loading"
                android:id="@+id/category_design_image_id"
                android:scaleType="fitXY"
                android:layout_width="140dp"
                android:layout_height="140dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:maxLines="2"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/baseline_category_24"
            android:id="@+id/category_design_label_id"
            android:layout_marginLeft="2dp"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programming"
            android:textStyle="bold"
            android:textColor="#06F8B7"
            android:textSize="17dp"/>

        <TextView
            android:fontFamily="serif"
            android:maxLines="4"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_title_24"
            android:drawablePadding="4dp"
            android:id="@+id/category_design_title_id"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Development Roadmap"
            android:textColor="@color/yellow"
            android:textSize="15.5dp"/>


    </LinearLayout>

</LinearLayout>