<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding=".50dp"
        android:elevation="2dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/cardMakerColor"
        android:layout_margin="5dp"
        android:foreground="@drawable/uni_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/loading"
                android:id="@+id/category_design_image_id"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="95dp"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <TextView

        android:maxLines="2"
        android:drawablePadding="4dp"
        android:id="@+id/category_design_label_id"
        android:layout_marginLeft="10dp"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:textStyle="bold"
        android:textColor="@color/whiteTextSideColor1"
        android:textSize="13dp"/>
    <TextView
        android:fontFamily="serif"
        android:maxLines="4"
        android:textStyle="bold"
        android:drawablePadding="4dp"
        android:id="@+id/category_design_title_id"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Development Roadmap"
        android:textColor="@color/yellow"
        android:textSize="12dp"/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:backgroundTint="#57AE0E"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="2dp"
        android:fontFamily="serif"
        android:maxLines="1"
        android:id="@+id/category_design_course_no_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 Lesson"
        android:textColor="@color/back"
        android:textSize="11dp"
        android:textStyle="bold" />

</LinearLayout>