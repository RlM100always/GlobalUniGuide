<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:elevation="2.5dp"
    android:backgroundTint="@color/cardMakerColor"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content">
    <LinearLayout
       android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:foreground="@drawable/uni_background"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="12dp"
                android:padding="4dp"
                android:layout_width="140dp"
                android:layout_height="110dp">
                <ImageView
                    android:src="@drawable/loading"
                    android:background="@drawable/background"                    android:elevation="6dp"
                    android:id="@+id/post_design_image_id3"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="serif"
                    android:maxLines="4"
                    android:id="@+id/post_design_title3"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/whiteTextColor1"
                    android:textSize="16dp"/>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableTint="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:drawableTop="@drawable/baseline_pageview_24"
                android:layout_weight="1"
                android:id="@+id/post_design_views3"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10444444 Views"
                android:textColor="@color/whiteTextSideColor1"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/post_design_loves3"
                android:drawableTint="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_favorite_241"
                android:gravity="center"
                android:layout_weight="1"
                android:text="3454466 loves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/post_design_reviews3"
                android:drawableTint="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_reviews_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="123664 reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/post_design_stars3"
                android:drawableTint="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="@color/whiteTextSideColor1"
                android:drawableTop="@drawable/baseline_stars_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="4.6 stars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>