<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:gravity="center"
    android:background="@color/FullWhite"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/settings_pic"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
            <TextView
                android:textColor="@color/whiteTextSideColor1"
                android:fontFamily="serif"
                android:text="Note : Rotate Screen is Available here.Roate your screen for Book Reading Flexibility."
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="8dp"
                        android:text="Choose View"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                    <RadioGroup
                        android:id="@+id/group_radio_view"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:fontFamily="serif"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/horizontal_id"
                            android:text="Horizontal"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:fontFamily="serif"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/vertical_id"
                            android:text="Vertical"
                            android:textSize="13sp"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="serif"

                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Choose Mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/radio_group_mode"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:fontFamily="serif"
                            android:id="@+id/light_id"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:fontFamily="serif"
                            android:id="@+id/night_id"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Night"
                            android:textSize="13sp"/>
                    </RadioGroup>
                </LinearLayout>






            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="serif"

                    android:layout_marginRight="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:id="@+id/apply_settings_id"
                    android:textColor="@color/back"
                    android:backgroundTint="@color/deepGreen"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/uni_background"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Apply"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="serif"
                    android:layout_marginLeft="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:id="@+id/cancel_settings_id"
                    android:textColor="@color/back"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/uni_background"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>





</LinearLayout>