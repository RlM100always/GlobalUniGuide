<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/edit_text_background"
    android:gravity="center"
    android:elevation="2dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/cardMakerColor"
    android:foreground="@drawable/uni_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="160dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/sugg_img_id"
                android:scaleType="fitXY"
                android:src="@drawable/loading"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginTop="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="3dp"
                android:paddingLeft="5dp"
                android:backgroundTint="@color/back"
                android:background="@drawable/rating_back"
                android:layout_gravity="center_horizontal"
                android:drawableTint="@color/deepGreen"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/baseline_star_rate_34"
                android:fontFamily="serif"
                android:id="@+id/sugg_uni_rate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4.6"
                android:textColor="@color/deepGreen"
                android:textSize="12dp"
                android:textStyle="bold" />



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:drawableTint="@color/whiteTextColor1"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_location_city_24"
            android:maxLines="3"
            android:fontFamily="serif"
            android:layout_marginLeft="4dp"
            android:id="@+id/sugg_uni_name_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Banglb "
            android:textColor="@color/whiteTextColor1"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:drawableTint="@color/whiteTextSideColor1"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:textStyle="bold"
            android:id="@+id/country_id_sugg"
            android:maxLines="3"
            android:fontFamily="serif"
            android:layout_marginLeft="2.6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangladesh"
            android:textColor="@color/whiteTextSideColor1"
            android:textSize="13dp"
            />





    </LinearLayout>

</LinearLayout>