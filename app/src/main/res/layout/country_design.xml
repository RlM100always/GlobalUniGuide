<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="#FC0A0D3C"
    android:orientation="vertical"
    android:foreground="@drawable/uni_background"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="7dp"

    android:elevation="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/country_image_id"
            android:background="@drawable/edit_text_background"
            android:scaleType="fitXY"
            android:src="@drawable/image_buet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView

        android:drawablePadding="1dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:fontFamily="serif"
        android:maxLines="3"
        android:id="@+id/country_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh "
        android:textColor="#FCDF04"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="4dp"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/baseline_info_24"
        android:fontFamily="serif"
        android:layout_marginBottom="5dp"
        android:maxLines="2"
        android:id="@+id/tnDateId"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="Details Information.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>