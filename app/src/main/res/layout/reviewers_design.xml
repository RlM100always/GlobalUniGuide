<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="#FCE6E7F1"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_marginTop="8dp"
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           app:civ_border_color="#FCADADB3"
           app:civ_border_width="1.1dp"
           android:id="@+id/cv_image_id"
           android:layout_marginLeft="8dp"
           android:src="@drawable/profile"
           android:layout_width="40dp"
           android:layout_height="40dp"/>
       <TextView
           android:fontFamily="serif"
           android:id="@+id/reviewers_name_id"
           android:textStyle="bold"
           android:layout_marginLeft="5dp"
           android:textColor="@color/black"
           android:textSize="14dp"
           android:text="Md Rakib Hossain"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_marginLeft="5dp"
            android:id="@+id/reviewers_ratingbar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:theme="@style/RatingBar1" />
    </LinearLayout>
    <TextView
        android:fontFamily="serif"
        android:textStyle="bold"
        android:id="@+id/reviewers_date_id"
        android:layout_marginLeft="8dp"
        android:textColor="@color/whiteTextSideColor1"
        android:textSize="14dp"
        android:text="12/11/2001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:autoLink="all"
        android:fontFamily="serif"
        android:id="@+id/reviewers_text_id"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:text="very good app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>