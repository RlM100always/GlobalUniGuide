<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/FullWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_image_id"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FCADADB3"
            app:civ_border_width="1.5dp" />

        <TextView
            android:id="@+id/reviewers_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Md Rakib Hossain"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="4dp">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/reviewers_ratingbar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="4.5"
            android:layout_marginEnd="8dp"
            android:theme="@style/RatingBar1" />

        <TextView
            android:id="@+id/reviewers_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/11/2001"
            android:textColor="@color/whiteTextSideColor1"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <TextView
        android:id="@+id/reviewers_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Very good app"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:autoLink="all" />

</LinearLayout>