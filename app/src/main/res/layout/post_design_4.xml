<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:elevation="6dp"
                android:foreground="@drawable/uni_background"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:background="@drawable/loading"
                    android:elevation="6dp"
                    android:id="@+id/post_design_image_id4"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="4"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:id="@+id/post_design_title4"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Development Roadmap"
                    android:textColor="@color/back"
                    android:textSize="16dp"/>



            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:drawableTint="@color/deepGreen"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:drawableTop="@drawable/baseline_pageview_24"
                android:layout_weight="1"
                android:id="@+id/post_design_views4"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10444444 Views"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/post_design_loves4"
                android:drawableTint="@color/red"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:drawableTop="@drawable/baseline_favorite_241"
                android:gravity="center"
                android:layout_weight="1"
                android:text="3454466 loves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/post_design_reviews4"
                android:drawableTint="@color/deepYellow"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:drawableTop="@drawable/baseline_reviews_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="123664 reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/post_design_stars4"
                android:drawableTint="@color/blue"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:drawableTop="@drawable/baseline_stars_24"
                android:gravity="center"
                android:layout_weight="1"
                android:text="4.6 stars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>