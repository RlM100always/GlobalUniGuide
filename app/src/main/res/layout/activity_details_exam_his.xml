<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context="com.techtravelcoder.alluniversityinformations.mcq.DetailsExamHisActivity">
    <TextView
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textColor="@color/yellow"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:paddingBottom="8dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="2dp"
        android:foreground="@drawable/uni_background"
        android:backgroundTint="@color/cardMakerColor"
        android:background="@drawable/edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="3dp"
            android:src="@drawable/summary"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/total_ques_id"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Question : 50"
                android:textColor="@color/whiteTextColor1"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/total_correct_id"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct Answer : 10"
                android:textColor="@color/deepGreen"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/total_wrong_id"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong Answer : 30"
                android:textColor="@color/red"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/correct_percentage_id"
           android:elevation="2dp"
           android:backgroundTint="@color/cardMakerColor"
           android:background="@drawable/edit_text_background"
           android:padding="5dp"
           android:layout_margin="6dp"
           android:layout_gravity="center"
           android:fontFamily="serif"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Correct 60 %"
           android:textColor="@color/deepGreen"
           android:textSize="13.5dp"
           android:textStyle="bold" />
       <TextView
           android:id="@+id/wrong_percentage_id"
           android:elevation="2dp"
           android:backgroundTint="@color/cardMakerColor"
           android:background="@drawable/edit_text_background"
           android:padding="5dp"
           android:layout_margin="6dp"
           android:layout_gravity="center"
           android:fontFamily="serif"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="Wrong 40 %"
           android:textColor="@color/red"
           android:textSize="13.5dp"
           android:textStyle="bold" />
   </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exam_result_recyclerview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>