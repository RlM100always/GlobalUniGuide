<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:padding="5dp"
    android:elevation="2dp"
    android:backgroundTint="@color/cardMakerColor"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/friends_date_id"
            android:textColor="@color/whiteTextColor1"
            android:fontFamily="serif"
            android:text="12 January 2024"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="10dp"
            android:foreground="@drawable/uni_background"
            android:id="@+id/up_down_id"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/whiteTextColor1"
            android:layout_marginLeft="5dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/baseline_arrow_downward_24"
            />


    </LinearLayout>


    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/friends_name_id"
        android:textColor="@color/whiteTextColor1"
        android:fontFamily="serif"
        android:text="Name : Jamil"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/friends_mobile_id"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/whiteTextColor1"
        android:fontFamily="serif"
        android:text="Mobile : 01825677777"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/friends_ll_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/friends_address_id"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:fontFamily="serif"
            android:text="Address : Dhaka"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/friends_institute_id"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:fontFamily="serif"
            android:text="Institute : Dhaka university"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/friends_department_id"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:fontFamily="serif"
            android:text="Department : FH Hall"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/friends_note_id"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/whiteTextColor1"
            android:fontFamily="serif"
            android:text="Note : Du"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    <LinearLayout
        android:padding="5dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"
                android:id="@+id/friends_call_id"
                android:backgroundTint="@color/whiteTextColor1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_call_24"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"
                android:id="@+id/friends_facebook_id"
                android:backgroundTint="@color/whiteTextColor1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/social"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"
                android:backgroundTint="@color/whiteTextColor1"
                android:id="@+id/friends_copy_id"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/copy"
                />
        </LinearLayout>
        <LinearLayout

            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"

                android:backgroundTint="@color/whiteTextColor1"
                android:id="@+id/friends_share_id"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_share_24"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"
                android:backgroundTint="@color/whiteTextColor1"
                android:id="@+id/friends_edit_id"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_edit_24"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:foreground="@drawable/uni_background"
                android:backgroundTint="@color/whiteTextColor1"
                android:id="@+id/friends_delete_id"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_delete_24"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>