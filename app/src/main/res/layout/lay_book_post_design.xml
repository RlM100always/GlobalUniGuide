<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"


    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:foreground="@drawable/uni_background">

    <LinearLayout
        android:id="@+id/ll_id_book_post_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Book Image with Placeholder and Delete Icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/rounded_top_corners"
                android:clipToOutline="true"
                android:id="@+id/lay_book_post_iamge_id"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/loading"
                android:foreground="@drawable/uni_background"
                tools:ignore="ContentDescription" />

            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/delete_iamge_ids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:src="@drawable/baseline_delete_24"
                android:visibility="gone"
                app:fabSize="mini"
                app:tint="@android:color/white"
                app:backgroundTint="@color/delete_button_color"
                tools:ignore="ContentDescription" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/lay_book_post_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh"
                android:textColor="@color/chip_text_color"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background_color"/>

            <!-- Book Name -->
            <TextView
                android:id="@+id/lay_book_post_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bangladesh"
                android:maxLines="3"
                android:textColor="@color/book_title_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Book Date (Hidden by default) -->
            <TextView
                android:id="@+id/lay_book_post_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12/111/2024"
                android:textColor="@color/book_date_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Book Format -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Format: .pdf"
                android:textColor="@color/book_format_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>