<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/cardMakerColor"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:foreground="@drawable/uni_background"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/uni_background"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/uni_design_image_id"
            android:background="@drawable/loading"
            android:scaleType="fitXY"
            android:src="@drawable/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_gravity="center_horizontal"
        android:drawablePadding="3dp"
        android:layout_marginLeft="5dp"
        android:drawableTint="@color/deepGreen"
        android:gravity="center"

        android:drawableRight="@drawable/baseline_star_rate_34"
        android:fontFamily="serif"
        android:id="@+id/private_uni_design_rating_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 4.5"
        android:textColor="@color/deepGreen"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="serif"
        android:layout_marginLeft="6dp"
        android:maxLines="3"
        android:id="@+id/uni_design_uniname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh "
        android:textColor="@color/whiteTextColor1"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="serif"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:maxLines="1"
        android:id="@+id/tnDateId"
        android:textColor="@color/whiteTextSideColor1"
        android:textSize="12dp"
        android:text="Read More.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>