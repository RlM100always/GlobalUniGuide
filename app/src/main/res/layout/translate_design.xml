<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/translator"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:foreground="@drawable/uni_background"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dictionary Word Translator"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold" />

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="#00C853"
            android:background="@drawable/submit_back"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/translate_app_compat_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



        </FrameLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:foreground="@drawable/uni_background"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/covert_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/submit_back"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:text="Translate"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:singleLine="false"
            android:id="@+id/after_tr_id"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</ScrollView>