<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- White border color -->

    <!-- Background -->
    <solid
        android:color="#F80606" /> <!-- Red background color -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" /> <!-- Padding inside the border -->

</shape>
