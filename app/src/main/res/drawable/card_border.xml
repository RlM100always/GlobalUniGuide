<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="#FF0000"/> <!-- Border color and width -->
            <corners android:radius="8dp"/> <!-- Adjust this value to match CardView's corner radius -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Card background color -->
            <corners android:radius="6dp"/> <!-- Adjust this value to match CardView's corner radius minus border width -->
        </shape>
    </item>
</layer-list>
